{
  "name": "batch-work-executor",
  "version": "0.1.1",
  "description": "Thread pool implementation inspired by ethereum-etl BatchWorkExecutor (and Piscina).",
  "main": "lib/index",
  "types": "lib/index",
  "repository": "git@github.com:mmmdawn/BatchWorkExecutor.git",
  "author": "dawn <congminh292k@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "lint": "eslint \"src/**\"",
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "precommit": "npm run prettier:write",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  }
}
